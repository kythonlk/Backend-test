datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime     @default(now())
  email       String?      @unique
  financials  Financial[]
  firstName   String?
  id          String       @id @default(cuid())
  inventories Inventory[]
  lastName    String?
  password    String
  purchasings Purchasing[]
  roles       Json
  salesItems  Sales[]
  updatedAt   DateTime     @updatedAt
  username    String       @unique
}

model Inventory {
  addedDate   DateTime?
  createdAt   DateTime     @default(now())
  description String?
  financials  Financial[]
  id          String       @id @default(cuid())
  itemName    String?
  price       Float?
  purchasings Purchasing[]
  quantity    Int?
  salesItems  Sales[]
  updatedAt   DateTime     @updatedAt
  updatedDate DateTime?
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
}

model Sales {
  createdAt    DateTime   @default(now())
  id           String     @id @default(cuid())
  inventory    Inventory? @relation(fields: [inventoryId], references: [id])
  inventoryId  String?
  quantitySold Int?
  saleDate     DateTime?
  totalAmount  Float?
  updatedAt    DateTime   @updatedAt
  user         User?      @relation(fields: [userId], references: [id])
  userId       String?
}

model Purchasing {
  createdAt         DateTime   @default(now())
  id                String     @id @default(cuid())
  inventory         Inventory? @relation(fields: [inventoryId], references: [id])
  inventoryId       String?
  purchaseDate      DateTime?
  quantityPurchased Int?
  totalCost         Float?
  updatedAt         DateTime   @updatedAt
  user              User?      @relation(fields: [userId], references: [id])
  userId            String?
}

model Financial {
  amount          Float?
  createdAt       DateTime   @default(now())
  id              String     @id @default(cuid())
  inventory       Inventory? @relation(fields: [inventoryId], references: [id])
  inventoryId     String?
  transactionDate DateTime?
  transactionType String?
  updatedAt       DateTime   @updatedAt
  user            User?      @relation(fields: [userId], references: [id])
  userId          String?
}
